<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <View
        android:id="@+id/wm_main_bgview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <android.support.v7.widget.LinearLayoutCompat
            android:id="@+id/wm_top"
            android:layout_width="280dp"
            android:layout_height="280dp"
            android:orientation="vertical"
            android:weightSum="3">

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/wm_item_cancel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:padding="24dp"
                    android:src="@drawable/back"/>

                <ImageView
                    android:id="@+id/wm_item_phone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:padding="24dp"
                    android:src="@drawable/camera"/>

                <ImageView
                    android:id="@+id/wm_item_power"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:padding="24dp"
                    android:src="@drawable/lock"/>
            </android.support.v7.widget.LinearLayoutCompat>

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/wm_item_home"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:padding="24dp"
                    android:src="@drawable/home"/>

                <ImageView
                    android:id="@+id/wm_item_screenshot"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:padding="24dp"
                    android:src="@drawable/screenshot"/>

                <ImageView
                    android:id="@+id/wm_item_flashlight"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:padding="24dp"
                    android:src="@drawable/flashlight"/>
            </android.support.v7.widget.LinearLayoutCompat>

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/wm_item_wifi"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:padding="24dp"
                    android:src="@drawable/wifi"/>

                <ImageView
                    android:id="@+id/wm_item_bluetooth"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:padding="24dp"
                    android:src="@drawable/bluetooth"/>

                <ImageView
                    android:id="@+id/wm_item_airplane"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:padding="24dp"
                    android:src="@drawable/airplane"/>
            </android.support.v7.widget.LinearLayoutCompat>

        </android.support.v7.widget.LinearLayoutCompat>

        <android.support.v7.widget.LinearLayoutCompat
            android:id="@+id/wm_bottom"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_marginTop="25dp"
            android:visibility="invisible">

            <ImageView
                android:id="@+id/wm_item_hotel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingLeft="15dp"
                android:layout_gravity="center"
                android:paddingRight="15dp"
                android:src="@drawable/hotel"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/wm_item_car"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:src="@drawable/car"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/wm_item_lunch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingLeft="15dp"
                android:layout_gravity="center"
                android:paddingRight="15dp"
                android:src="@drawable/lunch"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/wm_item_airport"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_gravity="center"
                android:src="@drawable/airport"
                android:visibility="gone"/>

        </android.support.v7.widget.LinearLayoutCompat>
    </LinearLayout>
</RelativeLayout>